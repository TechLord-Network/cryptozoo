{
  "name": "@cryptozoo/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "uniswap",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "app:start": "yarn workspace @cryptozoo/app start --max-old-space-size=12288",
    "dev:build": "yarn workspace @cryptozoo/dev build --max-old-space-size=12288",
    "dev:eject": "yarn workspace @cryptozoo/dev eject",
    "dev:start": "yarn workspace @cryptozoo/dev start",
    "dev:test": "yarn workspace @cryptozoo/dev test",
    "build": "yarn workspace @cryptozoo/dev build --max-old-space-size=12288",
    "chain": "yarn workspace @cryptozoo/contracts chain",
    "fork": "yarn workspace @cryptozoo/contracts fork",
    "node": "yarn workspace @cryptozoo/contracts chain",
    "test": "yarn workspace @cryptozoo/contracts test",
    "start": "yarn workspace @cryptozoo/app start",
    "dev": "yarn workspace @cryptozoo/dev start",
    "compile": "yarn workspace @cryptozoo/contracts compile",
    "deploy": "yarn workspace @cryptozoo/contracts deploy",
    "watch": "yarn workspace @cryptozoo/contracts watch",
    "accounts": "yarn workspace @cryptozoo/contracts accounts",
    "balance": "yarn workspace @cryptozoo/contracts balance",
    "send": "yarn workspace @cryptozoo/contracts send",
    "ipfs": "yarn workspace @cryptozoo/dev ipfs",
    "surge": "yarn workspace @cryptozoo/dev surge",
    "s3": "yarn workspace @cryptozoo/dev s3",
    "ship": "yarn workspace @cryptozoo/dev ship",
    "generate": "yarn workspace @cryptozoo/contracts generate",
    "account": "yarn workspace @cryptozoo/contracts account",
    "mineContractAddress": "cd packages/contracts && npx contracts mineContractAddress",
    "wallet": "cd packages/contracts && npx contracts wallet",
    "fundedwallet": "cd packages/contracts && npx hardhat fundedwallet",
    "flatten": "cd packages/contracts && npx hardhat flatten",
    "clean": "cd packages/contracts && npx hardhat clean",
    "run-graph-node": "yarn workspace @cryptozoo/services run-graph-node",
    "remove-graph-node": "yarn workspace @cryptozoo/services remove-graph-node",
    "clean-graph-node": "yarn workspace @cryptozoo/services clean-graph-node",
    "graph-prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph-codegen": "yarn workspace @cryptozoo/subgraph graph codegen",
    "graph-build": "yarn workspace @cryptozoo/subgraph graph build",
    "graph-create-local": "yarn workspace @cryptozoo/subgraph graph create --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-remove-local": "yarn workspace @cryptozoo/subgraph graph remove --node http://localhost:8020/ scaffold-eth/your-contract",
    "graph-deploy-local": "yarn workspace @cryptozoo/subgraph graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 scaffold-eth/your-contract",
    "graph-ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local",
    "theme": "yarn workspace @cryptozoo/dev theme",
    "watch-theme": "yarn workspace @cryptozoo/dev watch"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/contracts",
      "**/contracts/**"
    ]
  },
  "dependencies": {
    "node-gyp": "^3.8.0"
  }
}
