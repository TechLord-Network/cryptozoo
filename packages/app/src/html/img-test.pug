doctype html
html
  head
    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    style.
      .animal {
        display: inline-block;
        width: 120px;
        vertical-align: top;
      }
      img {
        width: 100%;
      }
  body
    each animal in animals
      .animal(data-basename=animal.hybrid_name_1, data-name=animal.name)
        p= animal.name
        img(src="")

    script.
      document.querySelectorAll('.animal').forEach(elem => {
        const _basename = elem.dataset.basename || elem.dataset.name
        let basename
        switch (_basename) {
          case 'Duckling':
            basename = 'Duck'
            break;
          case 'Kitten':
            basename = 'Kittens'
            break;
          case 'Pug':
            basename = 'Pugs'
            break;
          default:
            basename = _basename;
        }
        elem.querySelector('img').src = `http://res.cloudinary.com/htcif1pyx/image/upload/w_600/v1/CryptoZoo/9:16%20Aspect%20Ratio/${encodeURIComponent(basename)}/${encodeURIComponent(elem.dataset.name)}.jpg`
      })