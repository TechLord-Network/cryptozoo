extends layout

block content
  main#AccountPage
    a(href="/feed")
      img#Logo(src="/images/logo.jpg", alt="CryptoZoo")
    h2 My Account
      a(href="/bank", style="font-size: 0.6em; display: inline-block; margin-left: 10px; color: white;") View Bank

    #AccountDetails

    .account-utils 
      a.ac-js(data-action="logout") Log Out

    #HatchModal.modal.hidden.-hide-details.-fixed(data-modal-name="hatch egg")
      .modal-close
      h2 
      video.hidden(preload, playsinline, src="/videos/hatch_mobile.mp4")
      video.hidden(preload, playsinline, src="/videos/hatch_mobile_hybrid.mp4")
      img#HatchModal-egg(src="/images/egg.png", alt="")

    #BreedModal.modal.hidden.-fixed(data-modal-name="breed")
      .modal-close
      h2 Select animals to breed
      .breed-row
        .breed-animal
          .breed-dropzone
        .breed-animal
          .breed-dropzone

block scripts
  script(src="/javascripts/account.js")