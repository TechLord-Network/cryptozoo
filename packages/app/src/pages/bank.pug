extends layout

block content
  main#AccountPage
    a(href="/feed")
      img#Logo(src="/images/logo.jpg", alt="CryptoZoo")
    h2 My Bank
      a(href="/bank", style="font-size: 0.6em; display: inline-block; margin-left: 10px; color: white;") View Account

    #AccountDetails.bank
      h1(style="text-align: center;")
        span.bank-js(data-name="zoocounter") 200000
        |  ZOOTOKENS
      h2(style="text-align: center;") ~
        span.bank-js(data-name="dollarscounter") 100
        |  USD

      h3 Total Daily Yield: 
        span.bank-js(data-name="dailyyield") 200
        |  ZOOTOKENS
      
      h3 Top Earners
      ul.bank__list.bank-js(data-name="topearners")

      h2(style="text-align: center; margin-top: 40px; margin-bottom: 10px;") TRANSACTION HISTORY
      ul.bank__list.bank__list-transactions.bank-js(data-name="transactionhistory")
    
block scripts
  script(src="/javascripts/bank.js")